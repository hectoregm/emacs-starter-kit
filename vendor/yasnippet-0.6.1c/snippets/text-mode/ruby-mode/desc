#name : describe (Controller)
# --
require 'spec_helper'

describe ${1:$
         (let ((fn (capitalize (file-name-nondirectory
                                 (file-name-sans-extension
                                   (buffer-file-name))))))
           (cond
             ((setq fn (string-search-and-replace "_" "" fn))
              (string-search-and-replace "Spec" "" fn))))} do

  $0

end
